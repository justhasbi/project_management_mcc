
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "ChangePassword";
}
@{
    var data = ViewBag.Payload;
}

<div class="row justify-content-center">
    <div class="col-xl-4 col-lg-4 col-md-9">
        <div class="card">
            <div class="card-header">
                <h3>Change Password</h3>
            </div>
            <div class="card-body">
                <form class="change-password" method="post" asp-controller="Accounts" asp-action="Auth">
                    <div class="form-group">
                        <input type="email" name="email" class="form-control form-control-user"
                               id="inputEmail" aria-describedby="emailHelp"
                               placeholder="Enter Email Address..." value="@data.Email" hidden readonly disabled>
                    </div>
                    <div class="form-group">
                        <label for="inputcurentpassword">Current Password</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fa fa-lock-open"></i>
                            </span>
                            <input type="password" name="curentpassword" class="form-control form-control-user"
                                   id="inputcurentpassword"
                                   placeholder="Enter Current Password" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputnewpassword">New Password</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fa fa-lock"></i>
                            </span>
                            <input type="password" name="newpassword" class="form-control form-control-user"
                                   id="inputnewpassword"
                                   placeholder="Enter New Password" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="confirmpassword">Confirm New Password</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fa fa-lock"></i>
                            </span>
                            <input type="password" name="confirmpassword" class="form-control form-control-user"
                                   id="confirmpassword"
                                   placeholder="Confirm Password" required>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-user btn-block">
                        Change Password
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap-validate.js"></script>

<script type="text/javascript">
    bootstrapValidate('#inputcurentpassword', 'min:5:Enter at least 5 characters')
    bootstrapValidate('#inputnewpassword', 'min:8:Minimum 8 characters')
    bootstrapValidate('#confirmpassword', 'matches:#inputnewpassword: Your password should match')

</script>
@section Scripts {
    <script src="~/js/Account.js"></script>
}
