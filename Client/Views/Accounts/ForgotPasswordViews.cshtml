@{
    Layout = "_Auth";
    ViewData["Title"] = "Forgot Password";
}


<div class="row justify-content-center">
    <div class="col-xl-4 col-lg-4 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="p-5">
                <div class="text-center">
                    <h1 class="h3 text-primary">Forgot Password</h1>
                </div>
                <form class="forgot-password mt-5" method="post" asp-controller="Accounts" asp-action="Auth">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fa fa-envelope"></i>
                            </span>
                            <input type="email" name="email" class="form-control form-control-user"
                                   id="inputForgotEmail" aria-describedby="emailHelp"
                                   placeholder="Enter Email Address..." required>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-user btn-block">
                        Send reset password email
                    </button>
                </form>
                <hr class="mt-5">
                <div class="text-center">
                    <a class="small" asp-controller="Accounts" asp-action="Index">Already have an account? Login!</a>
                </div>
                <div class="text-center">
                    <a class="small" asp-controller="Accounts" asp-action="RegisterViews">Create an Account!</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap-validate.js"></script>

<script type="text/javascript">
    bootstrapValidate('#inputForgotEmail', 'email: Enter a valid email address')
</script>

@section Scripts {
    <script src="~/js/Account.js"></script>
}