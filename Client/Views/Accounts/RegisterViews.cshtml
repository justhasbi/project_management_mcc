@{
    Layout = "_Auth";
    ViewData["Title"] = "Register";
}

<body class="bg-gradient-primary">
    <div class="container col-lg-4 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5" id="register">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h3 text-primary">Create an Account!</h1>
                    </div>
                    <form class="needs-validation register-form" novalidate>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <label for="first">First Name</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fa fa-user"></i>
                                    </span>
                                    <input type="text" class="form-control form-control-user" id="first"
                                           placeholder="First Name" required>
                                    <div class="invalid-feedback">Fild Cannot Empety</div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label for="last">Last Name</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fa fa-user"></i>
                                    </span>
                                    <input type="text" class="form-control form-control-user" id="last"
                                           placeholder="Last Name" required>
                                    <div class="invalid-feedback">Fild Cannot Empety</div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="phone">Phone Number</label>
                            <div class="input-group">
                                <span class="input-group-text">+62</span>
                                <input type="number" class="form-control form-control-user" id="phone"
                                       placeholder="Phone" value="89800897665" required>
                                <div class="invalid-feedback">Field Cannot be Empty</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="gender">Gender</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fa fa-venus-mars"></i>
                                </span>
                                <select class="form-control form-control-user" id="gender" required>
                                    <option value="0">Male</option>
                                    <option value="1">Female</option>
                                </select>
                                <div class="invalid-feedback">Field Cannot be Empty</div>
                            </div>
                            <div class="form-group">
                                <label for="email">Email Address</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fa fa-envelope"></i>
                                    </span>
                                    <input type="email" class="form-control form-control-user" id="email"
                                           placeholder="Email Address" required>
                                    <div class="invalid-feedback">Field Cannot be Empty</div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fa fa-lock"></i>
                                    </span>
                                    <input type="password" class="form-control form-control-user" id="pass"
                                           placeholder="Password" required>
                                    <div class="invalid-feedback">Field Cannot be Empty</div>
                                </div>
                            </div>
                            <label for="job">Job</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fa fa-briefcase"></i>
                                </span>
                                <select class="form-control form-control-user" id="job" required>
                                    <option value="">Job</option>
                                </select>
                            </div>
                            <label for="department">Department</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fa fa-building"></i>
                                </span>
                                <select class="form-control form-control-user" id="department" required>
                                    <option value="">Department</option>
                                </select>
                            </div>
                            <label for="role">Role</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fa fa-user-tag"></i>
                                </span>
                                <select class="form-control form-control-user" id="role" required>
                                    <option value="1">User</option>
                                    <option value="2">Manager</option>
                                    <option value="3">Supervisor</option>
                                    <option value="4">HR</option>
                                </select>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-user btn-block my-3" id="submit">
                            Register Account
                        </button>
                        <hr>
                    </form>
                    <div class="text-center">
                        <a class="small" asp-controller="Accounts" asp-action="ForgotPasswordViews">Forgot Password?</a>
                    </div>
                    <div class="text-center">
                        <a class="small" asp-controller="Accounts" asp-action="Index">Already have an account? Login!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script src="~/lib/bootstrap/dist/js/bootstrap-validate.js"></script>

<script type="text/javascript">
    bootstrapValidate('#first', 'min:5:Enter at least 5 characters')
    bootstrapValidate('#last', 'min:5:Enter at least 5 characters')
    bootstrapValidate('#phone', 'min:11:Enter at least 5 characters')
    bootstrapValidate('#gender', 'required: Please fill out this field')
    bootstrapValidate('#email', 'email: Enter a valid email address')
    bootstrapValidate('#pass', 'min:8: Enter at least 8 characters')
    bootstrapValidate('#job', 'required')
    bootstrapValidate('#department', 'required')
    bootstrapValidate('#role', 'required')
</script>


@section Scripts {
    <script src="~/js/Account.js"></script>
}