@{
    Layout = "_Auth";
    ViewData["Title"] = "Register";
}

<body class="bg-gradient-primary">
    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5" id="register">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="p-5">
                    <div class="text-center my-3">
                        <h1 class="h2 text-gray-900 mb-4">Create an Account!</h1>
                    </div>
                    <form class="needs-validation register-form" novalidate>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <label for="first">First Name</label>
                                <input type="text" class="form-control form-control-user" id="first"
                                       placeholder="First Name" value="Test" required>
                                <div class="invalid-feedback">Fild Cannot Empety</div>
                            </div>
                            <div class="col-sm-6">
                                <label for="last">Last Name</label>
                                <input type="text" class="form-control form-control-user" id="last"
                                       placeholder="Last Name" value="Test" required>
                                <div class="invalid-feedback">Fild Cannot Empety</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="phone">Phone Number</label>
                            <input type="number" class="form-control form-control-user" id="phone"
                                   placeholder="Phone" value="089800897665" required>
                            <div class="invalid-feedback">Field Cannot be Empty</div>
                        </div>
                        <div class="form-group">
                            <label for="gender">Gender</label>
                            <select class="form-control form-control-user" id="gender" required>
                                <option value="0">Male</option>
                                <option value="1">Female</option>
                            </select>
                            <div class="invalid-feedback">Field Cannot be Empty</div>
                            <div class="form-group">
                                <label for="email">Email Address</label>
                                <input type="email" class="form-control form-control-user" id="email"
                                       placeholder="Email Address" value="mail@gmail.com" required>
                                <div class="invalid-feedback">Field Cannot be Empty</div>
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" class="form-control form-control-user" id="pass"
                                       placeholder="Password" value="Coba123456" required>
                                <div class="invalid-feedback">Field Cannot be Empty</div>
                            </div>

                            <label for="job">Job</label>
                            <select class="form-control form-control-user" id="job" required>
                                <option value="">Job</option>
                            </select>

                            <label for="department">Department</label>
                            <select class="form-control form-control-user" id="department" required>
                                <option value="">Department</option>
                            </select>


                            <label for="role">Role</label>
                            <select class="form-control form-control-user" id="role" required>
                                <option value="1">User</option>
                                <option value="2">Manager</option>
                                <option value="3">Supervisor</option>
                                <option value="4">HR</option>
                            </select>

                        </div>
                        <button type="submit" class="btn btn-primary btn-user btn-block my-5" id="submit">
                            Register Account
                        </button>
                        <hr>
                    </form>
                    <div class="text-center">
                        <a class="small" asp-controller="Accounts" asp-action="ForgotPasswordViews">Forgot Password?</a>
                    </div>
                    <div class="text-center">
                        <a class="small" asp-controller="Accounts" asp-action="Index">Already have an account? Login!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <script src="~/js/Account.js"></script>
}